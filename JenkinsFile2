pipeline {
    agent any
    tools {
        maven 'M3'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building from DEVELOPMENT branch"
                dir('maven-project') {
                  sh 'ls -l'
                  sh 'mvn clean install'
                }
            }
        }
        stage('Deploy to Staging') {
            when {
                expression { env.BRANCH_NAME == 'dev' }
            }
            steps {
                echo "Deploying to STAGING environment..."
                sh './deploy-staging.sh'
            }
        }
    }
}
